<?xml version="1.0" encoding="UTF-8" ?>

<widget xmlns = "http://www.w3.org/ns/widgets"
     xmlns:gap = "http://phonegap.com/ns/1.0"
     id        = "com.clubcentives.clubcentivesapp"
     version   = "1.0.1">

    <name>CLUBcentives</name>

    <description>
        Mobile features for Clubcentives(tm) members and business subscribers 
    </description>

    <author href="https://clubcentives.com" email="alerts@clubcentives.com">
        CLUBCentives, LLC 
    </author>
    
    <preference name="orientation" value="portrait" />

    <preference name="permissions" value="none"/>
    
    <access origin="http://clubcentives.com" subdomains="true" />
    <access origin="https://clubcentives.com" subdomains="true" />
    
    <icon src="icon.png" />
    
	<icon src="img/icon.57.png" gap:platform="ios" width="57" height="57" />
	<icon src="img/icon.72.png" gap:platform="ios" width="72" height="72" />
	<icon src="img/icon.114.png" gap:platform="ios" width="114" height="114" />
    
	<icon src="img/icon.36.png" gap:platform="android" gap:density="ldpi" />
	<icon src="img/icon.48.png" gap:platform="android" gap:density="mdpi" />
	<icon src="img/icon.72.png" gap:platform="android" gap:density="hdpi" />
	<icon src="img/icon.96.png" gap:platform="android" gap:density="xhdpi" />
	    
